@{
    ViewData["Title"] = "Home Page";
}

<div class="reggy">
    @model RegWLog
    <h1>Register</h1>
    <form action="/register" method="post">
        <h4>First Name</h4>
        <span asp-validation-for="UserReg.Name"></span>
        <input asp-for="UserReg.Name">

        <h4>Alias</h4>
        <span asp-validation-for="UserReg.Alias"></span>
        <input asp-for="UserReg.Alias">
        
        <h4>Email</h4>
        <span asp-validation-for="UserReg.Email"></span>
        <input asp-for="UserReg.Email">

        <h4>Password</h4>
        <span asp-validation-for="UserReg.Password"></span>
        <input tpye="password" asp-for="UserReg.Password">
        
        <h4>Confirm Password</h4>
        <span asp-validation-for="UserReg.Confirm"></span>
        <input asp-for="UserReg.Confirm">
        <input type="submit" value="Register">
    </form>
</div>
<div class="login">
    <h1>Login</h1>
        <form action="/login" method="post">
            <h3><label asp-for="UserLog.Email"></label></h3>
            <span asp-validation-for="UserLog.Email"></span>
            <input asp-for="UserLog.Email">

            <h3><label asp-for="UserLog.Password"></label></h3>
            <span asp-validation-for="UserLog.Password"></span>
            <input asp-for="UserLog.Password">

            <button>Login</button>
        </form>    

</div>
